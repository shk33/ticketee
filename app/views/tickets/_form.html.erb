<%= simple_form_for [project, ticket] do |f| %>
	<% if ticket.errors.any? %>
		<div id="error_explanation">
			<h2><%= pluralize(ticket.errors.count, "error") %>
			prohibited this project from being saved:</h2>
			<ul>
				<% ticket.errors.full_messages.each do |msg| %>
					<li><%= msg %></li>
				<% end %>
			</ul>
		</div>
	<% end %>

	<%= f.input :name %>
	<%= f.input :description %>

  <h3>Attachments</h3>
  <%= f.simple_fields_for :attachments do |ff| %>
    <%= ff.input :file, as: :file, label: "File ##{ff.index + 1}" %>
    <%= ff.input :file_cache, as: :hidden %>
  <% end %>

	<%= f.button :submit, class: "btn-primary" %>
<% end %>
