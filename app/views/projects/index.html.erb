<header>
	<h1>Projects</h1>

	<ul class="actions">
		<% admins_only do %>
		<li>
			<%= link_to "New Project", new_admin_project_path, class: "new" %>
		</li>
		<% end %>
	</ul>
</header>


<div id="projects">
	<% @projects.each do |project|  %>
		<h2><%= link_to project.name, project  %></h2>
		<p><%= project.description %></p>
	<% end %>
</div>